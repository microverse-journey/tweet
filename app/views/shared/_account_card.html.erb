<div class="col-md-3">
    <div class="card">
        <div class="card-body d-flex align-items-center justify-content-between">
            <%= image_tag(account.image, class: "account-img rounded-circle", alt: account.name) %>
            <div>
                <h5><%= account.name %></h5>
                <%= link_to account.username, "https://twitter.com/#{account.username}" %>
            </div>
        </div>
    </div>
</div>