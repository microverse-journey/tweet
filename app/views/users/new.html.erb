<h1>Sign Up</h1>
<%= form_with model: @post, local: true do |f| %>
  <%= f.label :title %><br>
  <%= f.text_field :title, placeholder: "Enter post title", required: true %>
  <%= f.label :description,  required: true%><br>
  <%= f.text_area :text %>
  <%= f.submit class: "button btn-success" %>
<% end %>